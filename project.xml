<project type="bio">
  <property name="target.model" value="genomic"/>
  <property name="common.os.prefix" value="common"/>
  <property name="intermine.properties.file" value="cowpeamine.properties"/>
  
  <sources>

    <!-- chado genomics - initiates SequenceFeatures, so run first -->
    <source name="lis-genomics" type="legfed-chado-db" dump="true">
      <property name="source.db.name" value="lis-chado"/>
      <property name="organisms" value="3920"/>
      <property name="strains" value="IT97K-499-35"/>
      <property name="dataSetTitle" value="LIS chado data"/>
      <property name="dataSourceName" value="LIS Tripal database"/>
      <property name="converter.class" value="org.intermine.bio.dataconversion.ChadoDBConverter"/>
      <property name="processors" value="org.intermine.bio.dataconversion.SequenceProcessor"/>
    </source>

    <!-- chado proteins -->
    <source name="lis-proteins" type="legfed-chado-db" dump="true">
      <property name="source.db.name" value="lis-chado"/>
      <property name="organisms" value="3885"/>
      <property name="strains" value="G19833"/>
      <property name="dataSetTitle" value="LIS chado protein data"/>
      <property name="dataSourceName" value="LIS chado database"/>
      <property name="converter.class" value="org.intermine.bio.dataconversion.ChadoDBConverter"/>
      <property name="processors" value="org.intermine.bio.dataconversion.ProteinProcessor"/>
    </source>
    
    <!-- chado genetics  -->
    <source name="lis-genetics" type="legfed-chado-db" dump="true">
      <property name="source.db.name" value="lis-chado"/>
      <property name="organisms" value="3920"/>
      <property name="strains" value="IT97K-499-35"/>
      <property name="dataSetTitle" value="LIS chado data"/>
      <property name="dataSourceName" value="LIS Tripal database"/>
      <property name="converter.class" value="org.intermine.bio.dataconversion.ChadoDBConverter"/>
      <property name="processors" value="org.intermine.bio.dataconversion.GeneticProcessor"/>
    </source>

    <!-- chado featureprop attributes -->
    <source name="lis-featureprop" type="legfed-chado-db" dump="true">
      <property name="source.db.name" value="lis-chado"/>
      <property name="organisms" value="3920"/>
      <property name="strains" value="IT97K-499-35"/>
      <property name="dataSetTitle" value="LIS chado data"/>
      <property name="dataSourceName" value="LIS Tripal database"/>
      <property name="converter.class" value="org.intermine.bio.dataconversion.ChadoDBConverter"/>
      <property name="processors" value="org.intermine.bio.dataconversion.FeaturePropProcessor"/>
    </source>

    <!-- chado gene families and resulting homology - based on featureprop -->
    <source name="lis-genefamilies" type="legfed-chado-db" dump="true">
      <property name="source.db.name" value="lis-chado"/>
      <property name="organisms" value="3920"/>
      <property name="strains" value="IT97K-499-35"/>
      <property name="homologue.organisms" value="3920 3847 3880 3885 130453 130454 3827 3827 157791 57577 3914 3821 3871 34305"/>
      <property name="homologue.strains" value="IT97K-499-35 Williams82 A17 G19833 V14167 K30076 CDCFrontier ICC4958 VC1973A MilvusB Gyeongwon ICPL87119 Tanjil MG20"/>
      <property name="dataSetTitle" value="LIS chado data"/>
      <property name="dataSourceName" value="LIS Tripal database"/>
      <property name="converter.class" value="org.intermine.bio.dataconversion.ChadoDBConverter"/>
      <property name="processors" value="org.intermine.bio.dataconversion.GeneFamilyProcessor"/>
    </source>

    <!-- chado + reactome file -->
    <source name="lis-reactome-file" type="legfed-chado-db" dump="true">
      <property name="source.db.name" value="lis-chado"/>
      <property name="reactome.filename" value="/home/shokin/legfed-intermine-data/plant-reactome/gene_ids_by_pathway_and_species.tab"/>
      <property name="organisms" value="3885"/>
      <property name="strains" value="G19833"/>
      <property name="dataSetTitle" value="LIS protein data + plant reactome"/>
      <property name="dataSourceName" value="LIS chado database"/>
      <property name="converter.class" value="org.intermine.bio.dataconversion.ChadoDBConverter"/>
      <property name="processors" value="org.intermine.bio.dataconversion.ReactomeProcessor"/>
    </source>

    <!-- NON-CHADO -->

    <!-- Germplasms from custom tab-delimited file -->
    <source name="cowpea-germplasms" type="legfed-germplasm-file" dump="true">
	<property name="src.data.dir" location="/home/shokin/legfed-intermine-data/cowpea-germplasms"/>
    </source>

    <!-- SNP marker details (sequences, alleles, etc.) -->
    <source name="cowpea-snpmarkers" type="legfed-snpmarker-file" dump="true">
      <property name="src.data.dir" location="/home/shokin/legfed-intermine-data/cowpea-iSelect-snps"/>
    </source>
    
    <!-- SNP marker genomic locations -->
    <source name="cowpea-snppositions" type="legfed-snpvcf-file" dump="true">
      <property name="src.data.dir" location="/home/shokin/legfed-intermine-data/cowpea-1m-selected-snps"/>
    </source>

    <!-- Genotyping experiments from custom tab-delimited file -->
    <source name="cowpea-genotyping" type="legfed-gt-file" dump="true">
      <property name="src.data.dir" location="/home/shokin/legfed-intermine-data/cowpea-genotyping"/>
    </source>

    <!-- linkage groups -->
    <source name="cowpea-linkagegroups" type="legfed-linkagegroup-file" dump="true">
      <property name="src.data.dir" location="/home/shokin/legfed-intermine-data/cowpea-linkagegroups"/>
    </source>
    
    <!-- marker locations in linkage groups -->
    <source name="cowpea-markers-linkagegroups" type="legfed-marker-linkagegroup-file" dump="true">
      <property name="src.data.dir" location="/home/shokin/legfed-intermine-data/cowpea-markers-linkagegroups"/>
    </source>

    <!-- QTLs -->
    <source name="cowpea-qtls" type="legfed-qtl-file" dump="true">
      <property name="src.data.dir" location="/home/shokin/legfed-intermine-data/cowpea-qtl"/>
    </source>

    <!-- markers associated with QTLs -->
    <source name="cowpea-markers-qtls" type="legfed-marker-qtl-file" dump="true">
      <property name="src.data.dir" location="/home/shokin/legfed-intermine-data/cowpea-qtl-markers"/>
    </source>
    
    <!-- QTL - trait ontology -->
    <source name="cowpea-qtl-trait-ontology" type="legfed-qtl-ontology-file" dump="true">
      <property name="src.data.dir" location="/home/shokin/legfed-intermine-data/cowpea-qtl-trait-ontology"/>
    </source>

    <!-- QTL - crop ontology -->
    <source name="cowpea-qtl-crop-ontology" type="legfed-qtl-ontology-file" dump="true">
      <property name="src.data.dir" location="/home/shokin/legfed-intermine-data/cowpea-qtl-crop-ontology"/>
    </source>

    <!-- VuGEA expression -->
    <source name="cowpea-expression" type="legfed-expression" dump="true">
      <property name="src.data.dir" location="/home/shokin/legfed-intermine-data/cowpea-expression"/>
    </source>

    <!-- ONTOLOGIES -->
    
    <!-- gene ontology -->
    <source name="go" type="go">
        <property name="src.data.file" location="/home/shokin/legfed-intermine-data/gene-ontology/go-basic.obo"/>
    </source>

    <!-- sequence ontology -->
    <source name="so" type="so">
	<property name="src.data.file" location="/home/shokin/SO-Ontologies/so-simple.obo"/>
    </source>

    <!-- trait ontology -->
    <source name="to" type="legfed-trait-ontology">
      <property name="src.data.file" location="/home/shokin/plant-trait-ontology/to.obo"/>
      <property name="ontology.prefix" value="TO"/>
    </source>

    <!-- plant ontology -->
    <source name="po" type="legfed-plant-ontology">
      <property name="src.data.file" location="/home/shokin/legfed-intermine-data/plant-ontology/po.obo"/>
      <property name="ontology.prefix" value="PO"/>
    </source>

    <!-- cowpea crop ontology -->
    <source name="co" type="legfed-crop-ontology">
      <property name="src.data.file" location="/home/shokin/legfed-intermine-data/cowpea-crop-ontology/CO_340.obo"/>
      <property name="ontology.prefix" value="CO"/>
    </source>

  </sources>

  <post-processing>

    <!-- source-specific post-processing -->
    <post-process name="do-sources" dump="true"/>

    <!-- add features -->
    <post-process name="legfed-create-gene-flanking-regions"/>
    <post-process name="legfed-create-supercontig-flanking-regions"/>
    <post-process name="legfed-create-intron-features"/>
    <post-process name="create-intergenic-region-features"/>

    <!-- legfed references and collections -->
    <post-process name="legfed-create-go-annotations"/>
    <post-process name="legfed-create-ontology-parent-annotations"/>
    <post-process name="legfed-create-exon-gene-references"/>
    <post-process name="legfed-create-protein-gene-references"/>
    <post-process name="legfed-create-qtl-linkagegroup-references"/>
    <post-process name="legfed-populate-gene-spanning-qtls"/>
    <post-process name="legfed-populate-interpro-data"/>
    <post-process name="legfed-populate-linkagegroup-lengths"/>
    <post-process name="legfed-populate-publications"/>
    
    <!-- core references and collections -->
    <post-process name="populate-child-features"/>
    <post-process name="create-references" />
    <post-process name="create-chromosome-locations-and-lengths"/>
    <post-process name="transfer-sequences"/>

    <!-- views and indexes, after all data is set -->
    <post-process name="create-location-overlap-index"/>
    <post-process name="create-overlap-view" />
    <post-process name="create-attribute-indexes"/>
    <post-process name="summarise-objectstore"/>
    <post-process name="create-autocomplete-index"/>
    <post-process name="create-search-index"/>

  </post-processing>

</project>
