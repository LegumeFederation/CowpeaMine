<project type="bio">
  <property name="target.model" value="genomic"/>
  <property name="source.location" location="../bio/sources/"/>
  <property name="common.os.prefix" value="common"/>
  <property name="intermine.properties.file" value="cowpeamine.properties"/>
  <property name="default.intermine.properties.file" location="../default.intermine.integrate.properties"/>
  
  <sources>

    <!-- chado genomics - initiates SequenceFeatures, so run first -->
    <source name="chado-genomics" type="legfed-chado-db" dump="true">
      <property name="source.db.name" value="chado"/>
      <property name="organisms" value="3920_IT97K-499-35"/>
      <property name="dataSetTitle" value="LIS chado data"/>
      <property name="dataSourceName" value="LIS Tripal database"/>
      <property name="converter.class" value="org.intermine.bio.dataconversion.ChadoDBConverter"/>
      <property name="processors" value="org.intermine.bio.dataconversion.SequenceProcessor"/>
    </source>

    <!-- chado genetics - initiates other genetic items, so run second -->
    <source name="chado-genetics" type="legfed-chado-db" dump="true">
      <property name="source.db.name" value="chado"/>
      <property name="organisms" value="3920_IT97K-499-35"/>
      <property name="dataSetTitle" value="LIS chado data"/>
      <property name="dataSourceName" value="LIS Tripal database"/>
      <property name="converter.class" value="org.intermine.bio.dataconversion.ChadoDBConverter"/>
      <property name="processors" value="org.intermine.bio.dataconversion.GeneticProcessor"/>
    </source>

    <!-- chado GO annotation -->
    <source name="chado-go" type="legfed-chado-db" dump="true">
      <property name="source.db.name" value="chado"/>
      <property name="organisms" value="3920_IT97K-499-35"/>
      <property name="dataSetTitle" value="LIS chado data"/>
      <property name="dataSourceName" value="LIS Tripal database"/>
      <property name="converter.class" value="org.intermine.bio.dataconversion.ChadoDBConverter"/>
      <property name="processors" value="org.intermine.bio.dataconversion.GOAnnotationProcessor"/>
    </source>

    <!-- chado featureprop attributes -->
    <source name="chado-featureprop" type="legfed-chado-db" dump="true">
      <property name="source.db.name" value="chado"/>
      <property name="organisms" value="3920_IT97K-499-35"/>
      <property name="dataSetTitle" value="LIS chado data"/>
      <property name="dataSourceName" value="LIS Tripal database"/>
      <property name="converter.class" value="org.intermine.bio.dataconversion.ChadoDBConverter"/>
      <property name="processors" value="org.intermine.bio.dataconversion.FeaturePropProcessor"/>
    </source>

    <!-- chado gene families and resulting homology - based on featureprop -->
    <source name="chado-genefamilies" type="legfed-chado-db" dump="true">
      <property name="source.db.name" value="chado"/>
      <property name="organisms" value="3920_IT97K-499-35"/>
      <property name="homologue.organisms" value="3920_IT97K-499-35 3847_Williams82 3880_Mt4.0 3885_G19833 130453_V14167 130454_K30076 3827_CDCFrontier 3827_ICC4958 157791_VC1973A 57577_MilvusB 3914_Gyeongwon 3821_ICPL87119 3871_Tanjil 34305_MG20"/>
      <property name="dataSetTitle" value="LIS chado data"/>
      <property name="dataSourceName" value="LIS Tripal database"/>
      <property name="converter.class" value="org.intermine.bio.dataconversion.ChadoDBConverter"/>
      <property name="processors" value="org.intermine.bio.dataconversion.GeneFamilyProcessor"/>
    </source>

    <!-- chado homology - based on phylotree - to grab Arabidopsis -->
    <!-- doesn't work yet, cowpea not in phylotree -->
    <source name="chado-homology" type="legfed-chado-db" dump="true">
      <property name="source.db.name" value="chado"/>
      <property name="organisms" value="3920_IT97K-499-35"/>
      <property name="homologue.organisms" value="3702_Col0"/>
      <property name="phytozome.version" value="phytozome_10_2"/>
      <property name="dataSetTitle" value="LIS chado data"/>
      <property name="dataSourceName" value="LIS Tripal database"/>
      <property name="converter.class" value="org.intermine.bio.dataconversion.ChadoDBConverter"/>
      <property name="processors" value="org.intermine.bio.dataconversion.HomologyProcessor"/>
    </source>

    <!-- Germplasms from custom tab-delimited file -->
    <source name="cowpea-germplasms" type="legfed-germplasm-file" dump="true">
	<property name="src.data.dir" location="/home/shokin/data/cowpea-germplasms"/>
    </source>

    <!-- marker-linkage group relationships from tab-delimited genetic map files -->
    <source name="cowpea-geneticmaps" type="legfed-geneticmap-file" dump="true">
      <property name="src.data.dir" location="/home/shokin/data/cowpea-geneticmaps"/>
    </source>

    <!-- Genotypes from custom tab-delimited file -->
    <source name="cowpea-genotypes" type="legfed-gt-file" dump="true">
      <property name="src.data.dir" location="/home/shokin/data/cowpea-genotyping"/>
    </source>

    <!-- SNP marker details (sequences, alleles, etc.) -->
    <source name="cowpea-snpmarkers" type="legfed-snpmarker-file" dump="true">
	<property name="src.data.dir" location="/home/shokin/data/cowpea-iSelect-snps"/>
    </source>

    <!-- SNP marker genomic locations -->
    <source name="cowpea-snppositions" type="legfed-snpvcf-file" dump="true">
	<property name="src.data.dir" location="/home/shokin/data/cowpea-1m-selected-snps"/>
    </source>

    <!-- marker-QTL relations with QTL TOTerms if available -->
    <source name="cowpea-qtlmarkers" type="legfed-qtlmarker-file" dump="true">
	<property name="src.data.dir" location="/home/shokin/data/cowpea-qtl-markers"/>
    </source>



    <!-- sequence ontology -->
    <source name="so" type="so">
      <property name="src.data.file" location="../../bio/sources/so/so.obo"/>
    </source>

    <!-- gene ontology -->
    <source name="go" type="go">
        <property name="src.data.file" location="/home/shokin/data/go-annotation/go.obo"/>
    </source>

    <!-- trait ontology -->
    <source name="to" type="trait-ontology">
      <property name="src.data.file" location="/home/shokin/data/plant-trait-ontology/to.obo"/>
      <property name="ontology.prefix" value="TO"/>
    </source>

    <!-- BROKEN WITH Organism.variety -->
    <!-- organism details -->
    <!-- <source name="entrez-organism" type="entrez-organism"> -->
    <!--   <property name="src.data.file" location="build/organisms.xml"/> -->
    <!-- </source> -->

  </sources>

  <post-processing>

    <!-- source-specific post-processing -->
    <post-process name="do-sources" dump="true"/>

    <!-- legfed -->
    <post-process name="populate-qtl-linkagegroups" dump="true"/>
    <post-process name="populate-gene-spanning-qtls" dump="true"/>
    <post-process name="create-protein-gene-references" dump="true"/>
    <post-process name="create-protein-domain-references" dump="true"/>
    <post-process name="populate-interpro-data" dump="true"/>
    
    <!-- add genome features -->
    <post-process name="create-intron-features"/>
    <post-process name="create-intergenic-region-features"/>
    <post-process name="create-gene-flanking-features"/>
   
    <!-- create various genomic references and collections -->
    <post-process name="populate-located-features"/>
    <post-process name="populate-child-features"/>
    <post-process name="create-references" />
    <post-process name="create-chromosome-locations-and-lengths"/>
    <post-process name="transfer-sequences"/>

    <!-- genomic views and indexes, after all data is set -->
    <post-process name="create-location-overlap-index"/>
    <post-process name="create-overlap-view" />

    <!-- general views and indexes -->
    <post-process name="create-attribute-indexes"/>
    <post-process name="summarise-objectstore"/>
    <post-process name="create-autocomplete-index"/>
    <post-process name="create-search-index"/>

  </post-processing>

</project>

