<project type="bio">
  <property name="target.model" value="genomic"/>
  <property name="source.location" location="../bio/sources/"/>
  <property name="common.os.prefix" value="common"/>
  <property name="intermine.properties.file" value="cowpeamine.properties"/>
  <property name="default.intermine.properties.file" location="../default.intermine.integrate.properties"/>
  
  <sources>

    <!-- marker-linkage group-QTL relationships from tab-delimited genetic map files -->
    <source name="cowpea-geneticmaps" type="legfed-geneticmap-file" dump="true">
      <property name="src.data.dir" location="/home/intermine/data/cowpea-geneticmaps"/>
    </source>

    <!-- Germplasms from custom tab-delimited file -->
    <source name="cowpea-germplasms" type="legfed-germplasm-file" dump="true">
	<property name="src.data.dir" location="/home/intermine/data/cowpea-germplasms"/>
    </source>

    <!-- Genotypes from custom tab-delimited file -->
    <source name="cowpea-genotypes" type="legfed-gt-file" dump="true">
      <property name="src.data.dir" location="/home/intermine/data/cowpea-genotyping"/>
    </source>

    <!-- sequence ontology -->
    <source name="so" type="so">
      <property name="src.data.file" location="../../bio/sources/so/so.obo"/>
    </source>

    <!-- crop ontology -->
    <source name="crop-ontology" type="crop-ontology">
	<property name="src.data.file" location="/home/intermine/data/cowpea-cropontology/CO_340.obo"/>
    </source>

    <!-- organism details -->
    <source name="entrez-organism" type="entrez-organism">
      <property name="src.data.file" location="build/organisms.xml"/>
    </source>

  </sources>

